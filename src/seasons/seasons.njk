---
layout: base.njk
permalink: "/seasons/"
title: "All Seasons"
---

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="text-center mb-12">
        <h1 class="text-5xl font-bold text-gray-900 dark:text-white mb-4">All Seasons</h1>
        <p class="text-xl text-gray-600 dark:text-gray-300">Projection accuracy analysis from 2012-2024</p>
    </div>

    <!-- Seasons Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 mb-12">
        {% for year, yearData in site.years %}
        <div class="bg-white dark:bg-gray-900 rounded-lg border border-gray-200 dark:border-gray-700 p-6 hover:shadow-lg transition-shadow">
            <div class="text-center">
                <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">
                    <a href="/seasons/{{ year }}/" class="hover:text-blue-600 dark:hover:text-blue-400">
                        {{ year }}
                    </a>
                </h3>

                {% if yearData %}
                <div class="space-y-2 text-sm text-gray-600 dark:text-gray-400">
                    <div class="flex justify-between">
                        <span>Batting analyses:</span>
                        <span class="font-medium font-mono">{{ yearData.batting | length }}</span>
                    </div>
                    <div class="flex justify-between">
                        <span>Pitching analyses:</span>
                        <span class="font-medium font-mono">{{ yearData.pitching | length }}</span>
                    </div>
                    <div class="flex justify-between">
                        <span>Total evaluations:</span>
                        <span class="font-medium text-blue-600 dark:text-blue-400 font-mono">{{ (yearData.batting | length) + (yearData.pitching | length) }}</span>
                    </div>
                </div>

                <div class="mt-4 pt-4 border-t border-gray-200 dark:border-gray-700">
                    <a href="/seasons/{{ year }}/" class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 text-sm font-medium">
                        View Details
                        <svg class="ml-1 w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                        </svg>
                    </a>
                </div>
                {% else %}
                <p class="text-gray-500 dark:text-gray-400 text-sm">No data available</p>
                {% endif %}
            </div>
        </div>
        {% endfor %}
    </div>

    <!-- Overall Summary Charts -->
    <div class="mb-12">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8 text-center">Overall Performance Summary</h2>
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <div class="bg-white dark:bg-gray-900 rounded-lg border border-gray-200 dark:border-gray-700 p-6">
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Batting RMSE Trends</h3>
                <div class="h-80"><canvas id="battingTrendsChart"></canvas></div>
            </div>
            <div class="bg-white dark:bg-gray-900 rounded-lg border border-gray-200 dark:border-gray-700 p-6">
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Pitching RMSE Trends</h3>
                <div class="h-80"><canvas id="pitchingTrendsChart"></canvas></div>
            </div>
        </div>
    </div>

    <!-- Dataset Summary -->
    <div class="bg-gray-50 dark:bg-gray-900 rounded-lg p-8">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 text-center">Dataset Summary</h2>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
            <div class="text-center">
                <div class="text-3xl font-bold text-blue-600 dark:text-blue-400 mb-2 font-mono">
                    {% set season_count = 0 %}
                    {% for year, yearData in site.years %}
                        {% set season_count = season_count + 1 %}
                    {% endfor %}
                    {{ season_count }}
                </div>
                <div class="text-gray-600 dark:text-gray-400">Total Seasons</div>
            </div>
            <div class="text-center">
                <div class="text-3xl font-bold text-green-600 dark:text-green-400 mb-2 font-mono">
                    {% set total_batting = 0 %}
                    {% for year, yearData in site.years %}
                        {% if yearData.batting %}
                            {% set total_batting = total_batting + (yearData.batting | length) %}
                        {% endif %}
                    {% endfor %}
                    {{ total_batting }}
                </div>
                <div class="text-gray-600 dark:text-gray-400">Batting Analyses</div>
            </div>
            <div class="text-center">
                <div class="text-3xl font-bold text-purple-600 dark:text-purple-400 mb-2 font-mono">
                    {% set total_pitching = 0 %}
                    {% for year, yearData in site.years %}
                        {% if yearData.pitching %}
                            {% set total_pitching = total_pitching + (yearData.pitching | length) %}
                        {% endif %}
                    {% endfor %}
                    {{ total_pitching }}
                </div>
                <div class="text-gray-600 dark:text-gray-400">Pitching Analyses</div>
            </div>
            <div class="text-center">
                <div class="text-3xl font-bold text-indigo-600 dark:text-indigo-400 mb-2 font-mono">{{ total_batting + total_pitching }}</div>
                <div class="text-gray-600 dark:text-gray-400">Total Evaluations</div>
            </div>
        </div>
    </div>
</div>

{% block scripts %}
// Generate overall trend charts
{% if site.charts.overall %}
{{ site.charts.overall.javascript | safe }}
{% endif %}
{% endblock %}